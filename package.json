{
  "name": "application",
  "version": "0.0.0",
  "description": "A simple web component",
  "main": "main-app.js",
  "module": "main-app.js",
  "type": "module",
  "scripts": {
    "build": "tsc && rollup -c --file dist/main-app.bundled.js",
    "build:watch": "tsc --watch",
    "lint": "lit-analyzer && eslint 'src/**/*.ts'",
    "format": "prettier src/* --write",
    "start": "npm run build && npm run analyze && run gen",
    "gen": "eleventy --config=.eleventy.cjs",
    "analyze": "wca analyze \"src/**/*.ts\" --outFile custom-elements.json",
    "serve": "run build && es-dev-server --node-resolve --watch",
    "serve:watch": "es-dev-server --node-resolve --watch & npm run build:watch",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
    "checksize": "rollup -c ; cat my-element.bundled.js | gzip -9 | wc -c ; rm main-app.bundled.js"
  },
  "keywords": [
    "web component",
    "lit-element",
    "typescript"
  ],
  "author": "Ricardo Guzm√°n",
  "license": "",
  "dependencies": {
    "lit-element": "^2.2.1",
    "webcomponents-loader": "^1.0.1"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.9.0",
    "@11ty/eleventy-plugin-syntaxhighlight": "^2.0.3",
    "@open-wc/testing": "^2.4.2",
    "@open-wc/testing-karma": "^3.2.19",
    "@rollup/plugin-replace": "^2.2.1",
    "@types/chai": "^4.2.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.23.1",
    "eslint": "^6.7.2",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lit-analyzer": "^1.1.9",
    "mocha": "^6.2.2",
    "prettier": "^1.19.1",
    "rollup": "^1.27.13",
    "rollup-plugin-filesize": "^6.2.1",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.3",
    "typescript": "^3.7.2",
    "web-component-analyzer": "^1.0.0"
  }
}